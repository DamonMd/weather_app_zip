
<div class="search">
  <h2>Welcome to Your Local Weather Generator!</h2>
  <h3>Simply enter in the zip code of the location you wish to know more about</h3>


  <%= form_tag("/forecasts/new", method: "get") do %>
    <%= label_tag(:id, "Zip:") %>
    <%= text_field_tag(:id) %>
    <%= submit_tag("Search") %>
  <% end %>

</div>
